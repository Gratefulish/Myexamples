		printf("n은 홀수\n");
	}
	else { //값이 0일때 실행 이므로 짝수일 때 출력.
		printf("n은 짝수\n");
	}

}

// 결과는 똑같이 나온다.

*/

example 02 - else

#include <stdio.h>

int main() {

	int n; 
	scanf_s("%d", &n);

	if (0) {		//참이므로 else가 실행됨. if (1) 인경우 항상 *** 출력
		printf("***");
	}
	else {
		printf("&&&");
	}
}

example 03 - else if

#include <stdio.h>



int main() {

	int n; 
	scanf_s("%d", &n);

	if (n > 0) {

		printf("n은 양수\n");
	}
	else if (n == 0) {

		printf("n은 0\n");
	}
	else {
		
		printf("n은 음수\n");
	}
}










